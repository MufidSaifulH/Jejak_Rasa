<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="187dp"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/promo_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/promo1" />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Beli 2 Gratis 1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promo_1" />

        <TextView
            android:id="@+id/tv_harga_coret"
            android:layout_width="87dp"
            android:layout_height="13dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:text="Rp 50.000"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deskripsi" />

        <TextView
            android:id="@+id/tv_harga_baru"
            android:layout_width="88dp"
            android:layout_height="14dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="Rp 40.000"
            android:textColor="@color/red_kenangan"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/harga_coret" />

    </LinearLayout>

</androidx.cardview.widget.CardView>