<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/order3"
    android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lg_kopi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bulet"
                android:padding="5dp"
                android:src="@drawable/brand2" />

            <ImageView
                android:id="@+id/lg_roti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bulet"
                android:padding="5dp"
                android:src="@drawable/brand3" />

            <ImageView
                android:id="@+id/lg_manis"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bulet"
                android:padding="5dp"
                android:src="@drawable/brand5" />
        </LinearLayout>

    <TextView
        android:id="@+id/nm_mall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lippo Mall Puri"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/al_mall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lippo Mall Puri "
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/biru"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/circle1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_biru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:layout_marginStart="5dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/ijo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/circle2"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_ijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dine In"
                android:layout_marginStart="5dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/ungu"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/circle3"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_ungu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:layout_marginStart="5dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="65dp">

            <TextView
                android:id="@+id/tv_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Oprasional"
                android:textColor="@color/biru"
                android:layout_marginStart="5dp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/rigth_arrow"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>